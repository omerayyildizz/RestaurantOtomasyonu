@model RestaurantOtomasyonu.Models.Menu

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
        <h4>Menü Düzenle</h4>
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               <input type="hidden" asp-for="Id" />
            <div class="form-group">
                    BAŞLIK
                <input asp-for="Baslik" class="form-control" />
                <span asp-validation-for="Baslik" class="text-danger"></span>
            </div>
            <div class="form-group">
                    AÇIKLAMA
                <input asp-for="Aciklama" class="form-control" />
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
            <div class="form-group">
                    RESİM
                <input asp-for="Resim" class="form-control"type="hidden" />
                <input asp-for="Resim" class="form-control"type="file" />
                <span asp-validation-for="Resim" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ozel" /> @Html.DisplayNameFor(model => model.Ozel)
                </label>
            </div>
            <div class="form-group">
                        FİYAT
                <input asp-for="Fiyat" class="form-control" />
                <span asp-validation-for="Fiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                        KATEGORİ ADI
                <select asp-for="KategoriId" class ="form-control" asp-items="ViewBag.KategoriId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-primary">Kayıt Listesi </a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        @if (Model.Resim==null)
                        {
                            <img src="~/Site/images/noimage.jpg" style=" width:250;height:300px;"/>
                        }
                        else
                        {
                                                        <img src="@Model.Resim" style=" width:250px;height:300px;"/>
                        }
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
