@model RestaurantOtomasyonu.Models.Blog

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>Yorum onaylama sayfası</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                
                <input asp-for="Baslik" class="form-control" hidden/>
                <span asp-validation-for="Baslik" class="text-danger"></span>
            </div>
            <div class="form-group">
               
                <input asp-for="AdSoyad" class="form-control" hidden/>
                <span asp-validation-for="AdSoyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input asp-for="Email" class="form-control" hidden />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input asp-for="Resim" class="form-control" hidden />
                <span asp-validation-for="Resim" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Onay" /> @Html.DisplayNameFor(model => model.Onay)
                </label>
            </div>
            <div class="form-group">
               
                <input asp-for="Mesaj" class="form-control" hidden />
                <span asp-validation-for="Mesaj" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input asp-for="Tarih" class="form-control" type="hidden" />
                <span asp-validation-for="Tarih" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Onayla" class="btn btn-success" />
                <a asp-action="Index" class="btn-primary">Kayıt Listesi</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
