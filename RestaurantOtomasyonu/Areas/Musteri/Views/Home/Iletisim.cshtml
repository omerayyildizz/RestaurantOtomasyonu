@model RestaurantOtomasyonu.Models.Iletisim
@{
    ViewData["Title"] = "Iletisim";
    Layout = "~/Views/Shared/_ALayout.cshtml";
}

<!-- Title Page -->
<section class="bg-title-page flex-c-m p-t-160 p-b-80 p-l-15 p-r-15" style="background-image: url(/Site/images/bg-title-page-02.jpg);">
    <h2 class="tit6 t-center">
        İletişim
    </h2>
</section>



<!-- Contact form -->
<section class="section-contact bg1-pattern p-t-90 p-b-113">
    <!-- Map -->
    <div class="container">
        <div class="map bo8 bo-rad-10 of-hidden">
            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12046.303519997182!2d29.028991!3d40.990767!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xe496758f11f5e5ab!2sNetwork%20Academy!5e0!3m2!1str!2str!4v1654530578183!5m2!1str!2str" width="1200" height="600" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>

    <div class="container">
        <h3 class="tit7 t-center p-b-62 p-t-105">
            Bize Ulaş!
        </h3>

        <form class="wrap-form-reservation size22 m-l-r-auto" asp-action="Iletisim">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-4">
                    <!-- Name -->
                    <span class="txt9">
                        Ad Soyad
                    </span>

                    <div class="wrap-inputname size12 bo2 bo-rad-10 m-t-3 m-b-23">
                        <input class="bo-rad-10 sizefull txt10 p-l-20" type="text" asp-for="AdSoyad" placeholder="Name">
                        <span asp-validation-for="AdSoyad"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <!-- Email -->
                    <span class="txt9">
                        Email
                    </span>

                    <div class="wrap-inputemail size12 bo2 bo-rad-10 m-t-3 m-b-23">
                        <input class="bo-rad-10 sizefull txt10 p-l-20" type="text" asp-for="Email" placeholder="Email">
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <!-- Phone -->
                    <span class="txt9">
                        Telefon
                    </span>

                    <div class="wrap-inputphone size12 bo2 bo-rad-10 m-t-3 m-b-23">
                        <input class="bo-rad-10 sizefull txt10 p-l-20" type="text" asp-for="Telefon" placeholder="Telefon">
                    </div>
                </div>

                <div class="col-12">
                    <!-- Message -->
                    <span class="txt9">
                        Mesaj
                    </span>
                    <textarea class="bo-rad-10 size35 bo2 txt10 p-l-20 p-t-15 m-b-10 m-t-3" asp-for="Mesaj" placeholder="Mesajınız.."></textarea>
                    <span asp-validation-for="Mesaj"></span>
                </div>
            </div>

            <div class="wrap-btn-booking flex-c-m m-t-13">
                <!-- Button3 -->
                <button type="submit" class="btn3 flex-c-m size36 txt11 trans-0-4">
                    Gönder
                </button>
            </div>
        </form>


    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
