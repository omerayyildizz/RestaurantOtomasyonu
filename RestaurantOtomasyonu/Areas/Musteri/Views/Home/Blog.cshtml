@model RestaurantOtomasyonu.Models.Blog
@{
    ViewData["Title"] = "Blog";
    Layout = "~/Views/Shared/_ALayout.cshtml";
}

	
	<!-- Title Page -->
	<section class="bg-title-page flex-c-m p-t-160 p-b-80 p-l-15 p-r-15" style="background-image: url(/Site/images/bg-title-page-03.jpg);">
		<h2 class="tit6 t-center">
			Blog
		</h2>
	</section>


	<!-- Content page -->
	<section>
		<div class="bread-crumb bo5-b p-t-17 p-b-17">
			<div class="container">
				<a href="index.html" class="txt27">
					Home
				</a>

				<span class="txt29 m-l-10 m-r-10">/</span>

				<span class="txt29">
					Blog
				</span>
			</div>
		</div>

		<div class="container">
			<div class="row">
				<div class="col-md-8 col-lg-9">
					<div class="p-t-80 p-b-124 bo5-r h-full p-r-50 p-r-0-md bo-none-md">
					@await Component.InvokeAsync("Yorumlar")
			
					</div>
				</div>

			<form class="leave-comment p-t-10" asp-action="Blog" enctype="multipart/form-data">
				<div asp-validation-summary="ModelOnly" class="text-danger"> </div>
							
							<textarea asp-for="Mesaj" class="bo-rad-10 size29 bo2 txt10 p-l-20 p-t-15 m-b-10 m-t-40" placeholder="Mesajınız."></textarea>
							<span asp-validation-for="Mesaj"></span>
							<div class="size30 bo2 bo-rad-10 m-t-3 m-b-20">
								<input class="bo-rad-10 sizefull txt10 p-l-20" type="text" asp-for="Baslik" placeholder="Başlık">
							<span asp-validation-for="Baslik"></span>
							</div>

							<div class="size30 bo2 bo-rad-10 m-t-3 m-b-20">
								<input class="bo-rad-10 sizefull txt10 p-l-20" type="text" asp-for="AdSoyad" placeholder="Ad Soyad">
							<span asp-validation-for="AdSoyad"></span>
							</div>

							<div class="size30 bo2 bo-rad-10 m-t-3 m-b-30">
								<input class="bo-rad-10 sizefull txt10 p-l-20" type="text" asp-for="Email" placeholder="Email">
							<span asp-validation-for="Email"></span>
							</div>	
							<div class="size30 bo2 bo-rad-10 m-t-3 m-b-30">
								<input class="bo-rad-10 sizefull txt10 p-l-20" type="file" asp-for="Resim">
							</div>

							<!-- Button3 -->
							<button type="submit" class="btn3 flex-c-m size31 txt11 trans-0-4">
								Yorum yap
							</button>
						</form>
			</div>
			@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

		</div>
	</section>

